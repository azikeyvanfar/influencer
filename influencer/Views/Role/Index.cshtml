@model List<influencer.ViewModels.Role.IndexViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-10">
                <h1>Index</h1>

                <a asp-controller="Role" asp-action="CreateRole" class="btn btn-danger">Create Role</a>

                <div class="container">
                    @if (Model.Any())
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-group">
                                Name = @Model[i].RoleName
                                <br />
                                RoleId = @Model[i].RoleId
                            </div>
                        }
                    }
                    else
                    {
                        <p>No Role Found.</p>
                    }
                </div>
            </div>
        </div>
    </main>

</div>