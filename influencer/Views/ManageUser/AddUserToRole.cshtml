@model influencer.ViewModels.ManageUser.AddUserToRoleViewModel
@{
    ViewData["Title"] = "AddUserToRole";
}
<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-6">
                <h1>AddUserToRole</h1>


                @if (!Model.UserRoles.Any())
                {
                    <h1>هیچ مقامی یافت نشد</h1>
                }
                else
                {
                    <form asp-controller="ManageUser" asp-action="AddUserToRole" method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        @for (int i = 0; i < Model.UserRoles.Count; i++)
                        {
                            <div class="form-group">
                                <input asp-for="@Model.UserRoles[i].IsSelected" />
                                <label>@Model.UserRoles[i].RoleName</label>

                                <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                            </div>
                        }
                        <input type="hidden" asp-for="@Model.UserId" />
                        <button class="btn btn-danger" type="submit">Submit</button>
                    </form>
                }
            </div>
        </div>
    </main>

</div>




