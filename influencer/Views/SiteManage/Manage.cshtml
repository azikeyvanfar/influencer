@model influencer.ViewModels.SiteManage.Manage
@{
    ViewData["Title"] = "Manage";
}
<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-10">
                <h1>Index</h1>
                <form asp-controller="SiteManage" asp-action="Manage" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>:
                        <span class="text-danger">*</span>
                        <input asp-for="Title" class="form-control" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Categories" class="control-label"></label>:
                        <span class="text-danger">*</span>
                        <select asp-for="Categories" class="form-control" asp-items="@(new SelectList(Model.Categories,"Text","Value"))" required>
                            <option value="">- انتخاب -</option>
                        </select>
                        <span asp-validation-for="Categories" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label>:
                        <span class="text-danger">*</span>
                        <div id="editor"></div>
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </main>

</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/29.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });

    </script>
}
