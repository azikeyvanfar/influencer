@model Domain.Entities.Advertise

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1>Details Advertise</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Title)*@
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categories)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Categories)*@
                @switch (Model.Categories)
                {
                    case 1:
                        {
                            <p>Ladies</p>
                            break;
                        }
                    case 2:
                        {
                            <p>Health</p>

                            break;
                        }
                    case 3:
                        {
                            <p>Fact</p>
                            break;
                        }
                    case 4:
                        {
                            <p>Success And Motivation</p>
                            break;
                        }
                    case 5:
                        {
                            <p>Sports</p>
                            break;
                        }
                    case 6:
                        {
                            <p>Art and Music</p>
                            break;
                        }
                    case 7:
                        {
                            <p>Lifestyle</p>
                            break;
                        }
                    case 8:
                        {
                            <p>Foods</p>
                            break;
                        }
                    case 9:
                        {
                            <p>Funny</p>
                            break;
                        }
                    case 10:
                        {
                            <p>Teaching</p>
                            break;
                        }
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CntFollowers)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CntFollowers)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CntViewers)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CntViewers)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fame)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fame)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdvPicture)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Uploads/@Model.AdvPicture"  width="200" asp-append-version="true"/>
            </dd>
        </dl>
        <div>
            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </main>
</div>