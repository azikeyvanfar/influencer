@model Domain.Entities.Context.ApplicationUser
@inject IViewLocalizer _localized
@{
    ViewData["Title"] = _localized["Profile"];
}

<div class="container">
    <main role="main" class="pb-3">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @_localized["UserName"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            @*<dt class="col-sm-2">
                @_localized["PasswordHash"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PasswordHash)
            </dd>*@
            <dt class="col-sm-2">
                @_localized["UserCategory"]:
            </dt>
            <dd class="col-sm-10">
                @switch (Model.UserCategory)
                {
                    case 1:
                        {
                            @_localized["Company"]
                            break;
                        }
                    case 2:
                        {
                            @_localized["Blogger"]

                            break;
                        }
                    case 3:
                        {
                            @_localized["Admin"]
                            break;
                        }
                }
            </dd>
            <dt class="col-sm-2">
                @_localized["Email"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @_localized["PhoneNumber"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @_localized["Country"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class="col-sm-2">
                @_localized["City"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @_localized["YourPicture"]:
            </dt>
            <dd class="col-sm-10">
                @if (Model.YourPicture != "")
                {
                    <img src="~/Uploads/@Model.YourPicture" width="200" asp-append-version="true" />
                }
            </dd>
        </dl>
        <div>
            @*<a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">@_localized["Back"]</a>
        </div>
    </main>
</div>