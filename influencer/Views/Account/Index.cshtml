@model Domain.Entities.Context.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1>Profile</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PasswordHash)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PasswordHash)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserCategory)
            </dt>
            <dd class="col-sm-10">
                @switch (Model.UserCategory)
                {
                    case 1:
                        {
                            <p>Company</p>
                            break;
                        }
                    case 2:
                        {
                            <p>Blogger</p>

                            break;
                        }
                    case 3:
                        {
                            <p>Admin</p>
                            break;
                        }
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YourPicture)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Uploads/@Model.YourPicture" width="200" asp-append-version="true" />
            </dd>
        </dl>
        <div>
            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </main>
</div>