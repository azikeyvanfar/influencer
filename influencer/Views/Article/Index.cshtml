        </section>
        <section id="hero2" class="carousel-item">

            <div class="container padtop-100" data-aos="fade-right" data-aos-delay="200">
                <div class="row">
                    <div class="col-xl-6">
                        <h1>Bettter digital experience with influencer</h1>
                        <h2>We are team of talented designers making websites with Bootstrap</h2>
                        <a href="#about" class="btn-get-started scrollto">Get Started</a>
                    </div>
                </div>
            </div>

        </section>
        <section id="hero3" class="align-items-center carousel-item">

            <div class="container padtop-100" data-aos="fade-right" data-aos-delay="200">
                <div class="row">
                    <div class="col-xl-6">
                        <h1>Bettter digital experience with influencer</h1>
                        <h2>We are team of talented designers making websites with Bootstrap</h2>
                        <a href="#about" class="btn-get-started scrollto">Get Started</a>
                    </div>
                </div>
            </div>

        </section>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- End Hero -->

<div class="container">
    <main role="main" class="pb-3">
        <button id="saveAll" class="SaveAll btn btn-danger">Save All</button>
        <!-- ======= Article Asked Questions Section ======= -->
        <div id="Article">
        @if (Model.Any())
        {

            @foreach (var article in Model)
            {
                @*<div class="section-title">
                        <h2>@article.Title</h2>
                    </div>*@
                <div class="row" art_title="@article.Title">
                    @Html.Raw(@article.Contents)
                </div>
            }

        }
        </div><!-- End Frequently Asked Questions Section -->
    </main><!-- End #main -->
    <div class="col-12 pb-5">
        <a asp-controller="Article" asp-action="WriteArticle" class="btn btn-danger" style="width:100%">Write Article</a>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/29.2.0/inline/ckeditor.js"></script>
    <script>
        let allEditors = document.querySelectorAll('.editable');
        for (let i = 0; i < allEditors.length; ++i) {
            InlineEditor
                .create(allEditors[i])
                .catch(error => {
                    console.error(error);
                });
        }

