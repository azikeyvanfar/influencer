    }
</style>
<!-- ======= Hero Section ======= -->
<div id="carouselExampleCaptions" class="carousel" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <section id="hero" class="align-items-center carousel-item active">

            <div class="container" data-aos="zoom-out" data-aos-delay="100">
                <div class="row">
                    <div class="col-xl-7">
                        <h1>@Localizer["TitleSlide"]</h1>
                        <h2>
                            @Localizer["DesciptionSlide1"]
                            @Localizer["DesciptionSlide2"]
                        </h2>
                        <a href="#about" class="btn-get-started scrollto">@Localizer["GetStarted"]</a>
                    </div>
                </div>
            </div>

        </section>
        <section id="hero2" class="carousel-item">

            <div class="container" data-aos="fade-right" data-aos-delay="200">
                <div class="row">
                    <div class="col-xl-7">
                        <h1>@Localizer["TitleSlide"]</h1>
                        <h2>
                            @Localizer["DesciptionSlide1"]
