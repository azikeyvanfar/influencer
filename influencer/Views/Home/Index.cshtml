@model List<Domain.Entities.UserArticle>
@{
    ViewData["Title"] = "Home Page";
}
<!-- ======= Hero Section ======= -->
<div id="carouselExampleCaptions" class="carousel" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <section id="hero" class="align-items-center carousel-item active">

            <div class="container padtop-100" data-aos="zoom-out" data-aos-delay="100">
                <div class="row">
                    <div class="col-xl-6">
                        <h1>Bettter digital experience with influencer</h1>
                        <h2>We are team of talented designers making websites with Bootstrap</h2>
                        <a href="#about" class="btn-get-started scrollto">Get Started</a>
                    </div>
                </div>
            </div>

        </section>
        <section id="hero2" class="carousel-item">

            <div class="container padtop-100" data-aos="fade-right" data-aos-delay="200">
                <div class="row">
                    <div class="col-xl-6">
                        <h1>Bettter digital experience with influencer</h1>
                        <h2>We are team of talented designers making websites with Bootstrap</h2>
                        <a href="#about" class="btn-get-started scrollto">Get Started</a>
                    </div>
                </div>
            </div>

        </section>
        <section id="hero3" class="align-items-center carousel-item">
            <div class="container padtop-100" data-aos="fade-right" data-aos-delay="200">
                <div class="row">
                    <div class="col-xl-6">
                        <h1>Bettter digital experience with influencer</h1>
                        <h2>We are team of talented designers making websites with Bootstrap</h2>
                        <a href="#about" class="btn-get-started scrollto">Get Started</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- End Hero -->
<main id="main">
    <section id="Article" class="faq">
        <div class="container" data-aos="fade-up">
            @if (Model.Any())
            {
                @foreach (var article in Model)
                {
                    @*<div class="section-title">
                        <h2>@article.Title</h2>
                    </div>*@
                    <div class="row">
                       @Html.Raw(@article.Contents)
                    </div>
                }
            }
        </div>
    </section><!-- End Frequently Asked Questions Section -->
</main><!-- End #main -->