@using Domain.Entities;
@inject IViewLocalizer Localizer
@model List<Domain.Entities.UserArticle>
@{
    ViewData["Title"] = Localizer["HomePage"];
}
<style>
    #pricing #ImpressionBasedTbl tr td, #pricing #ImpressionBasedTbl tr th, #pricing #StoryBasedTbl tr td, #pricing #StoryBasedTbl tr th {
        padding-top: 22px;
        padding-bottom: 15px;
    }

    #pricing #TimeBasedTbl tr td {
        padding-bottom: 6px;
    }

    #pricing table tr th {
        padding-bottom: 10px;
        padding-top: 20px;
    }

    #pricing table {
        width: 100%;
    }

    .Costkilo {
        text-align: center;
        width: 80px;
        background: #2b2b2b;
        border: 0px;
        border-bottom: 1px solid #fff;
        color: #fff
