@using Domain.Entities;
@model List<Domain.Entities.Languages>
@{
    ViewData["Title"] = "Languages";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - influencer</title>
    <meta content="Creative influencer marketplace to meet your brand's content needs" name="description">
    <meta content="" name="keywords">
    <meta content="www.keyvanfar.ir" name="author">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <style>
        html {
            background: url(../assets/img/Influencer.jpg) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            color: black;
        }
        a{
            text-decoration:none;
            color:#000;
        }
    </style>
</head>
<body style="background: none !important">
    <div class="container" style="margin-top:20%">
        <div class="row" data-aos="fade-up">
            <div class="col-md-3"></div>
            <div class="col-md-5">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item">
                            <a asp-action="ChangeLanguage" asp-route-culture="@item.LanguageTitle" style="cursor:pointer">
                                @switch (@item.LanguageTitle)
                                {
                                    case "en-US":
                                        <span>English</span><img src="~/assets/img/EN.jpg" width="70" style="float:right;"/>
                                        break;
                                    case "fa-IR":
                                        <span>فارسی</span><img src="~/assets/img/FA.png" width="70" style="float:right;"/>
                                        break;
                                    case "tr-TR":
                                        <span>Turkey</span><img src="~/assets/img/TR.jpg" width="70" style="float:right;"/>
                                        break;
                                    default:
                                        <span>English</span><img src="~/assets/img/EN.jpg" width="70" style="float:right;"/>
                                        break;
                                }
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>
</html>
@section Scripts{
    <script>
    </script>
}
