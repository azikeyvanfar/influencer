<script type="text/javascript">
    $(function () {
        $.urlParam = function(name){
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            if (results != null)
                return results[1] || 0;
            else
                return 0;
        }
        $("#FrmLogin").validate({
            rules: {
                // simple rule, converted to {required:true}
                UserName: "required",
                // compound rule
                Password: {
                    required: true
                },
                Description: {
                    required: true
                }
            },
            submitHandler: function (form) {
                $("[name=ConfirmPassword]").val($("[name=Password]").val());
                $.ajax({
                    url: '@Url.Action("Login","Account")',
                    data: $(form).serialize(),
                    type: 'post',
                    dataType: 'json',
                    success: function (res) {
                        if (res.success) {
                            if ($.urlParam('returnUrl') != '') {
                                window.location.href = decodeURIComponent($.urlParam('returnUrl'))
                            } else {
                                window.location.href = '@Url.Action("Index","Main")';
                            }
                        } else {
                            $.noty("اطلاعات وارد شده صحیح نمی باشد","btn-danger",2000);
                        }
                    }
                });
            }
        });
    });
</script>