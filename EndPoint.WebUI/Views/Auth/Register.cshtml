﻿@Model EndPoint.WebUI.Models.RegisterUser
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-8">
        <h1>Register User</h1>
        <form action="/auth/register" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="text" name="Username" value="@Model.Username" class="form-control" id="userEmail">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="Password" class="form-control" id="userPassword">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="ConfirmPassword" class="form-control" id="userConfirmPassword">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>



