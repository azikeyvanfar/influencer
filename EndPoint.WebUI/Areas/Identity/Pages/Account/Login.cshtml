@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card login-card">
    <div class="row no-gutters">
        <div class="col-md-4">
            <div style="padding:20px">
                <h1>@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <h4>Sign into your account</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="checkbox col-6">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="col-6">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-block">Log in</button>
                        </div>
                        <div class="form-group row">
                            <div class="col-8">Don't have an account?</div>
                            <p class="col-4">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
        <div class="col-md-8">
            <img src="~/assets/img/tabs-1.jpg" width="100%" />
